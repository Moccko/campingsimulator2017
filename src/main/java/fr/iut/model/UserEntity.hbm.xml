<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.iut.model.UserEntity" table="User" schema="CampingSimulator">
        <id name="login">
            <column name="login" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="password">
            <column name="password" sql-type="mediumtext"/>
        </property>
        <property name="employeeIdEmployee">
            <column name="Employee_idEmployee" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="employeeByEmployeeIdEmployee" class="fr.iut.model.EmployeeEntity">
            <column name="Employee_idEmployee" not-null="true"/>
        </many-to-one>
        <set name="logsByLogin" inverse="true">
            <key>
                <column name="user"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.LogEntity"/>
        </set>
        <set name="userHasAuthorizationsByLogin" inverse="true">
            <key>
                <column name="login"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.UserHasAuthorizationEntity"/>
        </set>
    </class>
</hibernate-mapping>