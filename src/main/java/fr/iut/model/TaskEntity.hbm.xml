<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.iut.model.TaskEntity" table="Task" schema="CampingSimulator">
        <id name="idTask">
            <column name="idTask" sql-type="int(11)"/>
        </id>
        <property name="starttime">
            <column name="starttime" sql-type="datetime"/>
        </property>
        <property name="endtime">
            <column name="endtime" sql-type="datetime"/>
        </property>
        <property name="label">
            <column name="label" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="idEmployee">
            <column name="idEmployee" sql-type="int(11)"/>
        </property>
        <property name="idLocation">
            <column name="idLocation" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="employeeByIdEmployee" class="fr.iut.model.EmployeeEntity">
            <column name="idEmployee"/>
        </many-to-one>
        <many-to-one name="locationByIdLocation" class="fr.iut.model.LocationEntity">
            <column name="idLocation" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>