<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.iut.model.ProblemEntity" table="Problem" schema="CampingSimulator">
        <id name="idProblem">
            <column name="idProblem" sql-type="int(11)"/>
        </id>
        <property name="appearanceDatetime">
            <column name="appearance_datetime" sql-type="datetime"/>
        </property>
        <property name="label">
            <column name="label" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="solutionDatetime">
            <column name="solution_datetime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(45)" length="45"/>
        </property>
        <set name="clientHasProblemsByIdProblem" inverse="true">
            <key>
                <column name="idProblem"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.ClientHasProblemEntity"/>
        </set>
        <set name="locationHasProblemsByIdProblem" inverse="true">
            <key>
                <column name="idProblem"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.LocationHasProblemEntity"/>
        </set>
    </class>
</hibernate-mapping>