<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.iut.model.UserHasAuthorizationEntity" table="User_has_Authorization" schema="CampingSimulator">
        <composite-id mapped="true" class="fr.iut.model.UserHasAuthorizationEntityPK">
            <key-property name="login">
                <column name="login" sql-type="varchar(20)" length="20"/>
            </key-property>
            <key-property name="idAuthorization">
                <column name="idAuthorization" sql-type="int(11)"/>
            </key-property>
        </composite-id>
        <many-to-one name="userByLogin" class="fr.iut.model.UserEntity">
            <column name="login"/>
        </many-to-one>
        <many-to-one name="authorizationByIdAuthorization" class="fr.iut.model.AuthorizationEntity">
            <column name="idAuthorization"/>
        </many-to-one>
    </class>
</hibernate-mapping>