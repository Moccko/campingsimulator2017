<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="fr.iut.model.LocationEntity" table="Location" schema="CampingSimulator">
        <id name="idLocation">
            <column name="idLocation" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="pointX">
            <column name="point_x" sql-type="float" precision="-1"/>
        </property>
        <property name="pointY">
            <column name="point_y" sql-type="float" precision="-1"/>
        </property>
        <one-to-one name="spotByIdLocation" class="fr.iut.model.SpotEntity"/>
        <set name="locationHasProblemsByIdLocation" inverse="true">
            <key>
                <column name="idLocation"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.LocationHasProblemEntity"/>
        </set>
        <set name="tasksByIdLocation" inverse="true">
            <key>
                <column name="idLocation" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="fr.iut.model.TaskEntity"/>
        </set>
    </class>
</hibernate-mapping>