<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <mapping-file>fr/iut/model/mapping.xml</mapping-file>
        <class>fr.iut.model.AuthorizationEntity</class>
        <class>fr.iut.model.ClientEntity</class>
        <class>fr.iut.model.ClientHasProblemEntity</class>
        <class>fr.iut.model.EmployeeEntity</class>
        <class>fr.iut.model.LocationEntity</class>
        <class>fr.iut.model.LocationHasProblemEntity</class>
        <class>fr.iut.model.LogEntity</class>
        <class>fr.iut.model.MapEntity</class>
        <class>fr.iut.model.ProblemEntity</class>
        <class>fr.iut.model.ProductEntity</class>
        <class>fr.iut.model.PurchaseEntity</class>
        <class>fr.iut.model.ReservationEntity</class>
        <class>fr.iut.model.RestockingEntity</class>
        <class>fr.iut.model.SpotEntity</class>
        <class>fr.iut.model.SpotTypeEntity</class>
        <class>fr.iut.model.SupplierEntity</class>
        <class>fr.iut.model.SupplierHasProductEntity</class>
        <class>fr.iut.model.TaskEntity</class>
        <class>fr.iut.model.UserEntity</class>
        <class>fr.iut.model.UserHasAuthorizationEntity</class>
        <class>fr.iut.model.PurchasesOnReservationEntity</class>
        <class>fr.iut.model.ReservedOrOccupiedSpotsEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/CampingSimulator"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="camping"/>
            <property name="hibernate.connection.password" value="camping"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
