<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mysql://localhost:3306/Camping</property>
        <property name="connection.username">camping</property>
        <property name="connection.password">camping</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <property name="show_sql">false</property>

        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">20</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="fr.iut.persistence.entities.Spot" />

        <mapping class="fr.iut.persistence.entities.Authorization"/>
        <mapping class="fr.iut.persistence.entities.Client"/>
        <mapping class="fr.iut.persistence.entities.Employee"/>
        <mapping class="fr.iut.persistence.entities.Location"/>
        <mapping class="fr.iut.persistence.entities.Log"/>
        <mapping class="fr.iut.persistence.entities.Map"/>
        <mapping class="fr.iut.persistence.entities.Problem"/>
        <mapping class="fr.iut.persistence.entities.Product"/>
        <mapping class="fr.iut.persistence.entities.Purchase"/>
        <mapping class="fr.iut.persistence.entities.Reservation"/>
        <mapping class="fr.iut.persistence.entities.Restocking"/>
        <mapping class="fr.iut.persistence.entities.Spot"/>
        <mapping class="fr.iut.persistence.entities.Supplier"/>
        <mapping class="fr.iut.persistence.entities.SupplierProposeProduct"/>
        <mapping class="fr.iut.persistence.entities.Task"/>
        <mapping class="fr.iut.persistence.entities.Notification"/>

    </session-factory>
</hibernate-configuration>
