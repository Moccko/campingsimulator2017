<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="camping-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>fr.iut.model.Authorization</class>
        <class>fr.iut.model.Client</class>
        <class>fr.iut.model.ClientHasProblem</class>
        <class>fr.iut.model.Employee</class>
        <class>fr.iut.model.Location</class>
        <class>fr.iut.model.LocationHasProblem</class>
        <class>fr.iut.model.Log</class>
        <class>fr.iut.model.Map</class>
        <class>fr.iut.model.Problem</class>
        <class>fr.iut.model.Product</class>
        <class>fr.iut.model.Purchase</class>
        <class>fr.iut.model.Reservation</class>
        <class>fr.iut.model.Restocking</class>
        <class>fr.iut.model.Spot</class>
        <class>fr.iut.model.SpotType</class>
        <class>fr.iut.model.Supplier</class>
        <class>fr.iut.model.SupplierHasProduct</class>
        <class>fr.iut.model.Task</class>
        <class>fr.iut.model.User</class>
        <class>fr.iut.model.UserHasAuthorization</class>

        <properties>
            <property name="mappingResources" value="fr/iut/model/*.xml" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/CampingSimulator"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="camping"/>
            <property name="hibernate.connection.password" value="camping"/>
        </properties>
    </persistence-unit>
</persistence>
