<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="camping-unit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>fr.iut.persistence.domain.Authorization</class>
        <class>fr.iut.persistence.domain.Client</class>
        <class>fr.iut.persistence.domain.Employee</class>
        <class>fr.iut.persistence.domain.Location</class>
        <class>fr.iut.persistence.domain.Log</class>
        <class>fr.iut.persistence.domain.Map</class>
        <class>fr.iut.persistence.domain.Problem</class>
        <class>fr.iut.persistence.domain.Product</class>
        <class>fr.iut.persistence.domain.Purchase</class>
        <class>fr.iut.persistence.domain.Reservation</class>
        <class>fr.iut.persistence.domain.Restocking</class>
        <class>fr.iut.persistence.domain.Spot</class>
        <class>fr.iut.persistence.domain.Supplier</class>
        <class>fr.iut.persistence.domain.Task</class>
        <class>fr.iut.persistence.domain.Notification</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.default_schema" value="Camping"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.showSql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
